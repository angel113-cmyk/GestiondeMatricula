@model IEnumerable<Curso>
@{
    ViewData["Title"] = "Matr√≠culas por Curso";
}

<div class="container mt-5">
    <div class="bg-blur shadow">
        <h2 class="mb-4 text-center">üìã Matr√≠culas por Curso</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>C√≥digo</th>
                        <th>Nombre</th>
                        <th>Cr√©ditos</th>
                        <th>Cupo M√°ximo</th>
                        <th>Matr√≠culas Confirmadas</th>
                        <th>Matr√≠culas Pendientes</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var curso in Model)
                    {
                        var matriculasConfirmadas = curso.Matriculas?.Count(m => m.Estado == EstadoMatricula.Confirmada) ?? 0;
                        var matriculasPendientes = curso.Matriculas?.Count(m => m.Estado == EstadoMatricula.Pendiente) ?? 0;
                        
                        <tr>
                            <td>@curso.Codigo</td>
                            <td>@curso.Nombre</td>
                            <td>@curso.Creditos</td>
                            <td>@curso.CupoMaximo</td>
                            <td>
                                <span class="@(matriculasConfirmadas >= curso.CupoMaximo ? "text-danger fw-bold" : "text-success fw-bold")">
                                    @matriculasConfirmadas
                                </span>
                            </td>
                            <td>@matriculasPendientes</td>
                            <td>
                                <a href="@Url.Action("MatriculasPorCurso", new { cursoId = curso.Id })" 
                                   class="btn btn-sm btn-info">
                                    Ver Matr√≠culas
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3 text-center">
            <a href="@Url.Action("Index")" class="btn btn-secondary">Volver al Panel</a>
        </div>
    </div>
</div>