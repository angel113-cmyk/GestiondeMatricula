@{
    ViewData["Title"] = "Reportes";
}

<div class="container mt-5">
    <div class="bg-blur shadow p-4">
        <h2 class="mb-4 text-center">üìä Reportes del Sistema</h2>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total de Cursos</h5>
                        <p class="card-text display-4 fw-bold">@ViewBag.TotalCursos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Cursos Activos</h5>
                        <p class="card-text display-4 fw-bold">@ViewBag.CursosActivos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-info shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Matr√≠culas</h5>
                        <p class="card-text display-4 fw-bold">@ViewBag.TotalMatriculas</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">üìà Estad√≠sticas de Matr√≠culas</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Confirmadas:</strong> <span class="text-success fw-bold">@ViewBag.MatriculasConfirmadas</span></p>
                        <p><strong>Pendientes:</strong> <span class="text-warning fw-bold">@ViewBag.MatriculasPendientes</span></p>
                        <p><strong>Canceladas:</strong> <span class="text-danger fw-bold">@ViewBag.MatriculasCanceladas</span></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">üèÜ Top Cursos M√°s Solicitados</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.TopCursos != null)
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var curso in ViewBag.TopCursos)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>@curso.Nombre</span>
                                        <span class="badge bg-primary rounded-pill">@curso.MatriculasCount matr√≠culas</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No hay datos disponibles.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Volver al Panel</a>
        </div>
    </div>
</div>