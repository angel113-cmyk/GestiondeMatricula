@model Curso
@{
    ViewData["Title"] = "Crear Curso";
}

<div class="container mt-5">
    <div class="bg-blur shadow mx-auto" style="max-width: 600px;">
        <h2 class="mb-4 text-center">üìù Crear Nuevo Curso</h2>

        <form asp-action="CrearCurso" method="post">
            <div class="mb-3">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Creditos" class="form-label"></label>
                <input asp-for="Creditos" class="form-control" />
                <span asp-validation-for="Creditos" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="CupoMaximo" class="form-label"></label>
                <input asp-for="CupoMaximo" class="form-control" />
                <span asp-validation-for="CupoMaximo" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="HorarioInicio" class="form-label"></label>
                @if (typeof(Curso).GetProperty("HorarioInicio").PropertyType == typeof(TimeSpan))
                {
                    <input asp-for="HorarioInicio" type="time" class="form-control" />
                }
                else
                {
                    <input asp-for="HorarioInicio" type="datetime-local" class="form-control" />
                }
                <span asp-validation-for="HorarioInicio" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="HorarioFin" class="form-label"></label>
                @if (typeof(Curso).GetProperty("HorarioFin").PropertyType == typeof(TimeSpan))
                {
                    <input asp-for="HorarioFin" type="time" class="form-control" />
                }
                else
                {
                    <input asp-for="HorarioFin" type="datetime-local" class="form-control" />
                }
                <span asp-validation-for="HorarioFin" class="text-danger"></span>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success px-4">Crear Curso</button>
                <a href="@Url.Action("Cursos")" class="btn btn-secondary px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>